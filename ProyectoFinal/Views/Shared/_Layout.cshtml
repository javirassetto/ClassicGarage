<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinal.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/classicGarage.ico" />
</head>
<body>
    <header class="header" style="background: linear-gradient(120deg, rgba(52, 84, 123, 0.8), rgba(26, 54, 93, 0.95))">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-red border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:'Russo One'; font-size:40px; margin-right:112px">
                    <img src=~/images/classicGarage.png alt="Logo" title="CLASSIC GARAGE" width="50" height="50">
                    CLASSIC GARAGE
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Inicio
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Inicio</a></li>
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>

                                    </ul>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Registros
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Marca" asp-action="Index">Marcas</a></li>
                                        <li><a class="dropdown-item" asp-controller="Modelo" asp-action="Index">Modelos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Tipo" asp-action="Index">Tipos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Index">Categorias</a></li>
                                    </ul>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Articulos
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Vehiculo" asp-action="Index">Vehiculos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Repuesto" asp-action="Index">Repuestos</a></li>
                                    </ul>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Ventas
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Venta" asp-action="Index">Venta</a></li>              
                                    </ul>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container divprincipal">
        <main role="main" class="pb-3">
            @RenderBody()           
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background: #e9ecef; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <div class="container">
            &copy; 2025 - ProyectoFinal - CLASSIC GARAGE S.A. <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
