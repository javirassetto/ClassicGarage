@model ProyectoFinal.ViewModels.VehiculoViewModels

@{
    ViewData["Title"] = "Crear";
}

<h1 class="h1-text">Cargar Nuevo Vehículo</h1>

<h4>Vehiculo</h4>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/imagenes.js"></script>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label fw-bold"></label>
                <img id="imagePreview" src="#" alt="Vista previa de la imagen" class="ImagenPrevia">
                <br />
                <div class="custom-file">

                    <input asp-for="Imagen" class="custom-file-input" id="customFile" onchange="previewImage(event)">
                 
                </div>
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
        
            @*Nuevos div*@
            <div class="form-group">
                <label asp-for="MarcaId" class="control-label fw-bold"></label>
                <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId" id="MarcaSelect">
                    <option value="">Seleccione una marca</option>
                </select>
                <span asp-validation-for="MarcaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeloId" class="control-label fw-bold"></label>
                <select asp-for="ModeloId" class="form-control" id="ModeloSelect">
                    <option value="">Seleccione un modelo</option>
                </select>
                <span asp-validation-for="ModeloId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="TipoId" class="control-label fw-bold"></label>
                <select asp-for="TipoId" class ="form-control" asp-items="ViewBag.TipoId">
                    <option value="">Seleccione un tipo</option>
                </select>
                <span asp-validation-for="TipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label fw-bold"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId">
                    <option value="">Seleccione una categoria</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ano" class="control-label fw-bold"></label>
                <input asp-for="ano" class="form-control"
                       placeholder="Ingrese un Año.." />
                <span asp-validation-for="ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label fw-bold"></label>
                <input asp-for="Precio" class="form-control"
                       placeholder="Ingrese un Precio.." />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label fw-bold"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-action="Index">Volver</a>
            </div>
      
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        // el siguiente código hace referencia a si desea que el nombre del archivo aparezca en la selección
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
        function previewImage(event) {
            var input = event.target;
            var reader = new FileReader();

            reader.onload = function () {
                var dataURL = reader.result;
                var imagePreview = document.getElementById('imagePreview');
                imagePreview.src = dataURL;
                imagePreview.style.display = 'block';
            };

            reader.readAsDataURL(input.files[0]);
        }
        $(document).ready(function () {
            $("#MarcaSelect").change(function () {
                var marcaId = $(this).val();
                $("#ModeloSelect").empty();

                if (marcaId) {
                    $.getJSON('@Url.Action("GetModelosByMarca", "Vehiculo")', { marcaId: marcaId }, function (data) {
                        $("#ModeloSelect").append('<option value="">Seleccione un modelo</option>');
                        $.each(data, function (i, modelo) {
                            $("#ModeloSelect").append('<option value="' + modelo.id + '">' + modelo.descripcion + '</option>');
                        });
                    });
                } else {
                    $("#ModeloSelect").append('<option value="">Seleccione una marca primero</option>');
                }
            });
        });
    </script>
}
