@model ProyectoFinal.Models.Categoria

@{
    ViewData["Title"] = "Crear";
}

<h1 class="h1-text">Crear</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label fw-bold"></label>
                <input asp-for="Descripcion" class="form-control"
                       placeholder="Ingrese una categoria.." />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label fw-bold"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> | 
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
