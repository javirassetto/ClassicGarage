@model ProyectoFinal.Models.Venta

@{
    ViewData["Title"] = "Crear";
}

<h1 class="h1-text">Crear</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
       
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label fw-bold"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    </br>
                    <input class="btn btn-success" type="button" id="btnAdd" value="+ Agregar Vehiculo" />

                </div>
            </div>

            <div class="form-group">
                <div id="VentaVehiculoContainer" class="form-group col-md-4">
                    @Html.EditorFor(model => model.Vehiculos)
                </div>
                <span asp-validation-for="Vehiculos" class="text-danger"></span>
            </div>
            
            <br/>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-outline-success" /> |
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $("#btnAdd").on('click', function () {
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: '/Venta/AddVentaVehiculo',
                success: function (partialView) {
                    console.log("partialView: " + partialView);
                    $('#VentaVehiculoContainer').html(partialView);
                }
            });
        });
    </script>
}
